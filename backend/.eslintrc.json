{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "import-helpers",
        "unused-imports"
    ],
    "rules": {
        "prettier/prettier": "error",
        "@typescript-eslint/no-non-null-assertion": "off"
    },
    "settings": {
        "import/resolver": {
          "typescript": {}
        }
    }
}
